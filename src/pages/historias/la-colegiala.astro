---
import Layout from "../../layouts/Layout.astro";
import { AstroSeo } from "@astrolib/seo";
import PreLoader from "../../components/PreLoader.astro";

import HeroHistorias from "../../components/Heros/HeroHistorias.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <AstroSeo
      title="La cripta de las confesiones"
      description="Libérate y cuenta tu secreto que ha nadie le contarías"
      canonical="https://www.hastalatumba.cl/"
      openGraph={{
        url: "https://www.hastalatumba.cl/",
        type: "website",
        title: "La cripta de las confesiones",
        description: "Libérate y cuenta tu secreto que ha nadie le contarías",
        images: [
          {
            url: "https://www.hastalatumba.cl/OgImage.webp",
            width: 1240,
            height: 630,
            alt: "Libérate y cuenta tu secreto que ha nadie le contarías",
            type: "image/webp",
          },
        ],
        site_name: "Hasta La Tumba",
      }}
      twitter={{
        handle: "@handle",
        site: "@site",
        cardType: "summary_large_image",
      }}
    />
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "",
            "item": "www.hastalatumba.cl"
          }
        ]
      }
    </script>
  </head>

  <Layout title="">
    <main>
      <PreLoader preloaderText="La Colegiala" />
      <HeroHistorias
        sectionClasses="bg-[url('/Imagenes/portadas/heroMujer.webp')] h-[400px] w-full bg-fixed bg-cover flex justify-center items-center flex-col"
        overlayClasses=" absolute inset-0 bg-black opacity-70 h-[400px]"
        h1Text="La Colegiala...."
        h1Classes="text-white font-black tracking-tight text-5xl sm:text-5xl md:text-7xl lg:text-7xl xl:text-8x1 text-center filter blur-[3px] contrast-[120%] w-[80%]"
      />
    </main>
  </Layout>


</html>
