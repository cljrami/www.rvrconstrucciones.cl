---
import Layout from "../../../layouts/Layout.astro";
import { AstroSeo } from "@astrolib/seo";
import PreLoader from "../../../components/PreLoader.astro";
import HeroHistorias from "../../../components/Heros/HeroHistorias.astro";
import Historia from "./historia.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- -<link rel="icon" type="image/svg+xml" href="/favicon.svg" />-->
    <meta name="generator" content={Astro.generator} />

    <AstroSeo
      title="El Bisagra"
      description="Libérate y cuenta tu secreto que ha nadie le contarías"
      canonical="https://www.hastalatumba.cl/historias/el-bisagra"
      openGraph={{
        url: "https://www.hastalatumba.cl/historias/el-bisagra",
        type: "website",
        title: "La cripta de las confesiones",
        description: "Libérate y cuenta tu secreto que ha nadie le contarías",
        images: [
          {
            url: "https://www.hastalatumba.cl/OgImage.webp",
            width: 1240,
            height: 630,
            alt: "Libérate y cuenta tu secreto que ha nadie le contarías",
            type: "image/webp",
          },
        ],
        site_name: "Hasta La Tumba",
      }}
      twitter={{
        handle: "@handle",
        site: "@site",
        cardType: "summary_large_image",
      }}
    />
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "",
            "item": "www.hastalatumba.cl"
          }
        ]
      }
    </script>
  </head>

  <Layout title="">
    <main>
      <PreLoader preloaderText="El Bisagra" />
      <HeroHistorias
        sectionClasses="bg-[url('/Imagenes/fonDos/herohombre.webp')] h-screen bg-cover flex justify-center items-center flex-col  bg-fixed "
        overlayClasses=" absolute inset-0 bg-black opacity-70 h-screen"
        h1Text="El Bisagra...."
        h1Classes="text-white font-black tracking-tight text-5xl sm:text-5xl md:text-7xl lg:text-7xl xl:text-8x1 text-center filter blur-[3px] contrast-[120%] w-[80%]"
        HomeLink="/"
        NombreHomeLink="Purgatorio"
        linkSeccion="/historias"
        seccion="Historias"
        tituloSeccion="El Bisagra"
        arrow2="-"
        arrow="-"
      />
    </main>
    <Historia />
  </Layout>


</html>
