---
export interface Props {
  tituloCta?: string;
  textoCta?: string;

  fontAwesome?: string;
}

const { tituloCta = "", fontAwesome = "", textoCta = "" } = Astro.props;
---

<div class="relative py-16">
  <div
    aria-hidden="true"
    class="absolute inset-0 h-max w-full m-auto grid grid-cols-2 -space-x-26 opacity-40 dark:opacity-20"
  >
    <div
      class="blur-[106px] h-56 bg-gradient-to-br from-red-500 to-red-400 dark:from-blue-700"
    >
    </div>
    <div
      class="blur-[106px] h-32 bg-gradient-to-r from-red-400 to-red-300 dark:to-indigo-600"
    >
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-6 md:px-12 xl:px-6">
    <div class="relative">
      <div class="flex items-center justify-center -space-x-2">
        <img
          loading="lazy"
          width="400"
          height="400"
          src="/Imagenes/portadas/historiaMujer.webp"
          alt="member photo"
          class="h-12 w-12 rounded-full object-cover"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="/Imagenes/portadas/historiaMujer.webp"
          alt="member photo"
          class="h-16 w-16 rounded-full object-cover"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="/Imagenes/portadas/historiaHombre.webp"
          alt="member photo"
          class="h-20 w-20 rounded-full object-cover"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="/Imagenes/portadas/historiaMujer.webp"
          alt="member photo"
          class="relative h-16 w-16 rounded-full object-cover"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="/Imagenes/portadas/historiaHombre.webp"
          alt="member photo"
          class="h-12 w-12 rounded-full object-cover"
        />
      </div>

      <div class="mt-6 m-auto space-y-6 md:w-9/12 lg:w-9/12">
        <h2
          class="text-center text-5xl font-bold text-gray-100 md:text-5xl animate-pulse"
        >
          {tituloCta}
        </h2>
        <p class="text-center text-3xl md:text-4x1 lg:text-5x1">
          {textoCta}
        </p>
        <div class="flex justify-center gap-6">
          <a
            href="#"
            class="relative flex h-12 w-full items-center justify-center px-4 before:absolute before:inset-0 before:rounded-md before:bg-red-500 before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max"
          >
            <span
              class="relative text-base font-semibold text-white dark:text-dark"
              >Déjanos Tu Historia</span
            >
          </a>
          <a
            href="/que-es-hastalatumba"
            class="relative flex h-12 w-full items-center justify-center px-8 before:absolute before:inset-0 before:border before:border-transparent before:bg-red-500/10 before:bg-gradient-to-b before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 dark:before:border-gray-700 dark:before:bg-gray-800 sm:w-max"
          >
            <span class="relative text-base font-semibold text-white"
              >¿Qué es HLT?</span
            >
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
