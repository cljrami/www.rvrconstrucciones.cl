---
export interface Props {
  tituloCta?: string;
  classesTituloCta: string;
  fontAwesome?: string;
}

const { tituloCta = "", classesTituloCta = "", fontAwesome = "" } = Astro.props;
import CtaComponent from "../Buttons/CtaComponent.astro";
---

<section class="p-4" '>
  <div
    class="max-w-6xl text-3xl mx-auto md:text-center text-center tails-relative"
  >
    <h2 class={classesTituloCta}>
      {tituloCta}
      {fontAwesome}
    </h2>

    <a href="#" class="inline-flex mt-12 justify-center items-center w-full">
      <CtaComponent
        buttonClasses="p-6 bg-red-600 rounded-md flex flex-row justify-center items-center gap-4 hover:bg-black hover:text-white"
        fontAwesome="fas fa-lock"
        textoBtn="Comparte Tu Secreto"
      />
    </a>
  </div>
</section>
