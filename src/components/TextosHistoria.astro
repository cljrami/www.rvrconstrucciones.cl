---
interface Props {
  Fecha?: string;
  Titulo?: string;
  Cita?: string;
  Texto?: string;
  Autor?: string;
  IdHistoria?: string;
  IdHref?: string;
}

const {
  Fecha = "",
  Titulo = "",
  Cita = "",
  Texto = "",
  Autor = "",
  IdHistoria = "",
  IdHref = "",
} = Astro.props;
---

<div class="absolute bottom-0 w-full flex justify-center pb-4">
  <a
    href={IdHref}
    class="text-center cursor-pointer animate-pulse animate-delay-75 text-red-500 text-4xl"
    ><i class="fas fa-angle-down"></i></a
  >
</div>

<section class="py-5 px-4 lg:px-20" id={IdHistoria}>
  <div class="flex flex-wrap">
    <div class="w-full md:w-3/3">
      <span class="font-light text-gray-300">{Fecha}</span>
      <h1 class="text-5xl text-gray-400 font-bold -600 mb-5">{Titulo}</h1>

      <blockquote
        class="border-l-4 border-red-500 italic font-bold p-10 bg-black mb-5"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-8 fill-red-900 pb-5"
          viewBox="0 0 35 30"
          fill="none"
        >
