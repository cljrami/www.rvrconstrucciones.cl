---
import TarjetaEstadistica from "./TarjetaEstadistica.astro";
---

<section class="overflow-hidden text-center" id="Stats">
  <div class="max-w-xl mx-auto text-center">
    <h2
      class="inline-block mb-2 text-sm text-blue-500 font-bold tracking-widest capitalize"
    >
      Nuestros Números
    </h2>
    <h2 class="mb-5 font-heading font-bold text-4xl sm:text-5xl text-white">
      Vamos como avión
    </h2>
    <h3 class="text-gray-400 text-base text-center capitalize">
      Nuestros resultados, hablan por si solos.
    </h3>
  </div>

  <div class="max-w-md mx-auto mt-5">
    <div class="grid grid-cols-2 md:grid-cols-2 sm:grid-cols-2 gap-5">
      <TarjetaEstadistica valor="75k+" texto="Emprendedor@s" />
      <TarjetaEstadistica valor="1.5k" texto="Auspiciadores" />
    </div>
  </div>
</section>
