---
// Prop para el texto del preloader
const text = Astro.props.text || "Cargando...";
---

<script>
  // Ocultar el preloader despuÃ©s de 3 segundos
  setTimeout(() => {
    const preloader = document.getElementById("preloader");
    preloader?.classList.add("hidden");
  }, 3000);
</script>

<div
  id="preloader"
  class="fixed top-0 left-0 w-full h-full flex justify-center items-center bg-gray-900 z-50"
>
  <div class="p-8 flex flex-col items-center">
    <div
      class="border-gray-300 h-20 w-20 animate-spin rounded-full border-8 border-t-blue-600"
    >
    </div>
    <p
      id="fade-text"
      class="text-white text-lg animate-fade animate-infinite mt-10"
    >
      {text}
    </p>
  </div>
</div>
